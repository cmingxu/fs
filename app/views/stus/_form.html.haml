= form_for @stu do |f|
  - if @stu.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stu.errors.count, "error")} prohibited this stu from being saved:"
      %ul
        - @stu.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :syndrome_id
    = f.number_field :syndrome_id
  .actions
    = f.submit 'Save'
