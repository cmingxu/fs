%h1 Listing zones

%table
  %thead
    %tr
      %th Name
      %th Position
      %th
      %th
      %th

  %tbody
    - @zones.each do |zone|
      %tr
        %td= zone.name
        %td= zone.position
        %td= link_to 'Show', zone
        %td= link_to 'Edit', edit_zone_path(zone)
        %td= link_to 'Destroy', zone, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Zone', new_zone_path
