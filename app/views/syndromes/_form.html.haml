= form_for @syndrome do |f|
  - if @syndrome.errors.any?
    #error_explanation
      %h2= "#{pluralize(@syndrome.errors.count, "error")} prohibited this syndrome from being saved:"
      %ul
        - @syndrome.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
