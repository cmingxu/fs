= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :agent_id
    = f.number_field :agent_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :begin_time
    = f.datetime_select :begin_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :short_description
    = f.text_area :short_description
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
